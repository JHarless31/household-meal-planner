# Application Configuration
APP_NAME="Household Meal Planning System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=household_db
DB_USER=household_app
DB_PASSWORD=your_secure_password_here

# Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
SESSION_SECRET=your_session_secret_key_here

# CORS
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://meal-planner.local,https://meal-planner.local

# Recipe Scraping
SCRAPER_USER_AGENT="HouseholdMealPlanner/1.0 (+http://meal-planner.local/about)"
SCRAPER_RATE_LIMIT=5
SCRAPER_TIMEOUT=10

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
