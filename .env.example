# ============================================================================
# Household Meal Planning System - Environment Configuration
# ============================================================================
# Generate secure secrets using: openssl rand -hex 32
# Replace all <placeholders> before running the application
#
# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=household_db
DB_USER=household_app
DB_PASSWORD=<generate-secure-password>

# Application
APP_NAME=Household Meal Planning System
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=False
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Authentication
JWT_SECRET=<generate-secure-secret>
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
SESSION_SECRET=<generate-secure-secret>

# Recipe Scraping
SCRAPER_USER_AGENT=HouseholdMealPlanner/1.0 (+http://meal-planner.local/about)
SCRAPER_RATE_LIMIT=5
SCRAPER_TIMEOUT=10

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/app/uploads

# Email (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=

# CORS (Comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://meal-planner.local,https://meal-planner.local

# Trusted Hosts (Comma-separated list, use "*" for development only)
# Production: Set to specific hostnames/IPs
ALLOWED_HOSTS=*

# Backup
BACKUP_PATH=/backups
BACKUP_RETENTION_DAYS=30
